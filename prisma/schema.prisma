generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deliverymans {
  id           String @id @default(uuid())
  profile_type Int    @default(3)
  email        String @unique
  username     String @unique
  password     String

  deliveries Deliveries[]

  @@map("deliverymans")
}

model Clients {
  id           String @id @default(uuid())
  profile_type Int    @default(2)
  email        String @unique
  username     String @unique
  password     String

  deliveries Deliveries[]

  @@map("clients")
}

model Deliveries {
  id             String    @id @default(uuid())
  item_name      String
  id_client      String
  id_deliveryman String?
  created_at     DateTime  @default(now())
  end_date       DateTime?

  client      Clients       @relation(fields: [id_client], references: [id])
  deliveryman Deliverymans? @relation(fields: [id_deliveryman], references: [id])

  @@map("deliveries")
}

model Admin {
  id           String @id @default(uuid())
  profile_type Int    @default(1)
  username     String @unique
  password     String

  @@map("admin")
}

model Profiles {
  id         String    @id @default(uuid())
  type       Int       @unique
  name       String    @unique
  created_at DateTime  @default(now())
  update_at  DateTime?

  @@map("profiles")
}
