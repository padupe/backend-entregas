                "responses": {
                    "200": {
                        "description": "Successfull"
                    },
                    "401": {
                        "description": "Username or password invalid!"
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            }
        },
        "/deliveryman": {
            "post": {
                "tags": [
                    "Deliveryman"
                ],
                "summary": "Create a Deliveryman",
                "description": "Create a new Deliveryman",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#definitions/Deliveryman"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Deliveryman already exists!"
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            }
        },
        "/deliveries": {
            "post": {
                "tags": [
                    "Delivery"
                ],
                "summary": "Create a Delivery",
                "description": "Create a new Delivery",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#definitions/Delivery"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "404": {
                        "description": "User not found!"
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            }
        }
    },
    "definitions": {
        "Clients": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "email": "teste@email.com",
                "username": "testusername",
                "password": "pass1234"
            }
        },
        "AuthClients": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "username": "testusername",
                "password": "pass1234"
            }
        },
        "AuthDeliverymans": {
            "type": "object",
