    "paths": {
        "/clients": {
            "post": {
                "tags": [
                    "Client"
                ],
                "summary": "Create a Client",
                "description": "Create a new Client",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#definitions/Clients"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "client": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                },
                                                "username": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Client already exists!"
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            }
        },
        "/authenticate/clients": {
            "post": {
                "tags": [
                    "Authenticate"
                ],
                "summary": "Client Authentication",
                "description": "Authenticate Client on Platafform",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#definitions/AuthClients"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfull",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Username or password invalid!"
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            }
        },
        "/authenticate/deliverymans": {
            "post": {
                "tags": [
                    "Authenticate"
                ],
                "summary": "Deliveryman Authentication",
                "description": "Authenticate Deliveryman on Platafform",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#definitions/AuthDeliverymans"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfull",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Username or password invalid!"
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            }
        },
        "/deliveryman": {
            "post": {
                "tags": [
                    "Deliveryman"
                ],
                "summary": "Create a Deliveryman",
                "description": "Create a new Deliveryman",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#definitions/Deliveryman"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "deliveryman": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                },
                                                "username": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Deliveryman already exists!"
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            }
        },
        "/deliveries": {
            "post": {
                "tags": [
                    "Delivery"
                ],
                "summary": "Create a Delivery",
                "description": "Create a new Delivery",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#definitions/Delivery"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "item": {
                                            "type": "string"
                                        },
                                        "client": {
                                            "type": "object",
                                            "properties": {
                                                "username": {
                                                    "type": "string"
                                                },
                                                "id": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found!"
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            }
        },
        "/deliveries/available": {
            "get": {
                "tags": [
                    "Delivery"
                ],
                "summary": "List all deliveries available",
                "description": "list all deleveries available to delivery",
                "responses": {
                    "200": {
                        "description": "Sucess",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string"
                                            },
                                            "item_name": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "string"
                                            },
                                            "client": {
                                                "type": "object",
                                                "properties": {
                                                    "username": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found!"
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            }
        }
    },
    "definitions": {
        "Clients": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "email": "teste@email.com",
                "username": "testusername",
                "password": "pass1234"
            }
        },
        "AuthClients": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "username": "testusername",
                "password": "pass1234"
            }
        },
        "AuthDeliverymans": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "username": "testusernamedeliveryman",
                "password": "pass1234"
            }
        },
        "Deliveryman": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "email": "testdeliveyman@email.com",
                "username": "testusernamedeliveryman",
                "password": "pass1234"
            }
        },
        "Delivery": {
            "type": "object",
            "properties": {
                "item_name": {
                    "type": "string"
                }
            },
            "example": {
                "item_name": "notebook"
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}