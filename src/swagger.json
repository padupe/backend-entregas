                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "email": "testdeliveyman@email.com",
                "username": "testusernamedeliveryman",
                "password": "pass1234"
            }
        },
        "Delivery": {
            "type": "object",
            "properties": {
                "item_name": {
                    "type": "string"
                },
                "id_client": {
                    "type": "uuid"
                }
            },
            "example": {
                "item_name": "notebook",
                "id_client": "4fd41225-6c9f-475c-bb63-c3b8fad858b5"
            }
